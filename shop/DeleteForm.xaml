<Window x:Class="shop.DeleteForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:shop"
        mc:Ignorable="d"
        Title="DeleteForm" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid Name="GridDelete" KeyUp="GridDelete_KeyUp" PreviewMouseUp="GridDelete_PreviewMouseUp">
        <ListBox x:Name="listBoxColumns" HorizontalAlignment="Left" Height="30" Margin="10,10,0,0" VerticalAlignment="Top" Width="145" FontSize="16" SelectionChanged="ListBoxColumns_SelectionChanged"/>
        <TextBox x:Name="TextBoxDelete" HorizontalAlignment="Left" Height="30" Margin="160,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="500" FontSize="16"/>
        <Button x:Name="ButtonDelete" Content="Удалить" HorizontalAlignment="Left" Margin="665,45,0,0" VerticalAlignment="Top" Width="76" Click="ButtonSelect_Click"/>
        <DataGrid x:Name="DataGridOutputData" HorizontalAlignment="Left" Height="250" Margin="10,45,0,0" VerticalAlignment="Top" Width="650"/>

    </Grid>
</Window>
