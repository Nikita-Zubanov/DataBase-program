<Window x:Class="shop.SelectForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:shop"
        mc:Ignorable="d"
        Title="SelectForm" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid x:Name="GridSelect" KeyUp="GridSelect_KeyUp">
        <ListBox x:Name="listBoxColumns" HorizontalAlignment="Left" Height="30" Margin="10,10,0,0" VerticalAlignment="Top" Width="145" FontSize="16" SelectionChanged="ListBoxColumns_SelectionChanged"/>
        <TextBox x:Name="TextBoxSelect" HorizontalAlignment="Left" Height="30" Margin="160,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="500" FontSize="16"/>
        <DataGrid x:Name="DataGridOutputData" HorizontalAlignment="Left" Height="250" Margin="10,45,0,0" VerticalAlignment="Top" Width="650"/>

    </Grid>
</Window>
